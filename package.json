{
  "name": "terra-ui.com",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": "6.3.0",
    "npm": "3.10.3"
  },
  "description": "Documentation site for Terra, a modularized Front-End Framework",
  "scripts": {
    "browser-sync": "browser-sync start --proxy localhost:3000 --files 'app/assets/stylesheets/*.scss, app/views/*.html.haml'",
    "lint": "npm run lint-js && npm run lint-scss",
    "lint-js": "eslint .",
    "lint-scss": "stylelint **/*.scss",
    "postinstall": "npm run webpack",
    "release:major": "npm version patch -m \"Released version %s\" && git push --follow-tags",
    "release:minor": "npm version minor -m \"Released version %s\" && git push --follow-tags",
    "release:patch": "npm version patch -m \"Released version %s\" && git push --follow-tags",
    "start": "webpack-dev-server --config webpack.hot.config.js --inline --hot",
    "webpack": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cerner/terra-ui.com.git"
  },
  "homepage": "https://www.terra-ui.com",
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "dependencies": {
    "terra-application": "git://github.com/cerner/terra-application.git#master",
    "terra-button": "git://github.com/cerner/terra-button.git#master",
    "terra-content": "git://github.com/cerner/terra-content.git#master",
    "terra-grid": "git://github.com/cerner/terra-grid.git#master",
    "terra-image": "git://github.com/cerner/terra-image.git#master",
    "terra-label": "git://github.com/cerner/terra-label.git#master",
    "terra-legacy-theme": "git://github.com/cerner/terra-legacy-theme.git#master",
    "terra-menu": "git://github.com/cerner/terra-menu.git#master",
    "terra-mixins": "git://github.com/cerner/terra-mixins.git#master",
    "terra-table": "git://github.com/cerner/terra-table.git#master",
    "terra-title": "git://github.com/cerner/terra-title.git#master"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.17.5",
    "clean-webpack-plugin": "^0.1.10",
    "css-loader": "^0.25.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-plugin-import": "^1.16.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.10.0",
    "path": "^0.12.7",
    "postcss-loader": "^0.13.0",
    "react-hot-loader": "^3.0.0-beta.5",
    "sass-loader": "^4.0.2",
    "stats-webpack-plugin": "^0.4.2",
    "style-loader": "^0.13.1",
    "stylelint-config-sass-guidelines": "^1.1.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1"
  }
}
